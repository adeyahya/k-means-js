{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declarationDir": "dist",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"types": [
			"mocha"
		],
		"lib": [
			"esnext",
			"DOM"
		],
		"baseUrl": ".",
		"paths": {
			"@lib": [
				"lib/index.ts"
			],
			"@lib/*": [
				"lib/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
